---
import type { ComponentProps } from 'react';
import { Heading as SystemHeading } from '@askoufis/system';
import Block from './Block.astro';

interface Props {
  level: ComponentProps<typeof SystemHeading>['level'];
  id: string;
}

const { level, id } = Astro.props;
---

<Block component="h1">
  <SystemHeading component="span" level={level} id={id}><slot /></SystemHeading>
</Block>
